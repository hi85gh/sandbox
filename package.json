{
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hi85gh/sandbox.git"
  },
  "scripts": {
    "format": "prettier --write ."
  },
  "devDependencies": {
    "prettier": "2.1.1"
  },
  "prettier": {
    "overrides": [
      {
        "files": [
          "*.js",
          "*.jsx",
          "*.mjs",
          "*.ts",
          "*.tsx",
          "*.vue"
        ],
        "options": {
          "semi": false,
          "singleQuote": true
        }
      }
    ]
  },
  "renovate": {
    "extends": [
      "config:base",
      "npm:unpublishSafe",
      ":dependencyDashboardApproval",
      ":label(renovate)",
      ":prHourlyLimitNone",
      ":rebaseStalePrs",
      ":semanticCommitTypeAll(chore)",
      ":semanticCommits",
      ":timezone(Asia/Tokyo)"
    ],
    "npm": {
      "commitMessageTopic": "{{prettyDepType}} {{depName}}",
      "rangeStrategy": "bump"
    }
  }
}
